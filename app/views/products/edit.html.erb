 <div class="product">
　　<div class="new">
		 <div class="sample">商品編集</div>
		 <%= flash[:notice] %>
		 <%= form_with model: @product do |f| %>
		 <%= f.label :'status', class: "label-type" %>
		 <% Product.statuses.each do |status| %>
		 <%= f.label ("enums.products.status#{status[0]}") %>
		 <%= f.radio_button :status, status[0,1]%>
		 <% end %>
		 <%= f.label :'variety', class: "label-type" %>
		 <% Product.varieties.each do |variety| %>
		 <%= f.label ("enums.products.variety#{variety[0]}")%>
		 <%= f.radio_button :variety, variety[0,1]%>
		 <% end %>
		 <%= f.label :'商品名', class: "label" %>
		 <%= f.text_field :name, class: "text", :size=>"60x20" %>
		 <%= f.label :'価格', class: "label" %>
		 <%= f.text_field :price, class: "text" %>
		 <%= f.label :'数量', class: "label" %>
		 <%= f.text_field :limited_number, class: "text" %>
		 <%= f.label :'掲載期間', class: "label" %>
		 <%= f.text_field :first_time, class: "text" %>
		 <%= f.text_field :last_time, class: "text" %>
		 <%= f.label :'写真', class: "label" %>
		 <%= f.file_field :photo %>
		 <%= f.label :'コメント', class: "label" %>
		 <%= f.text_area :comment, class: "text", size: "60x10", style: "border: none" %>  
		 <%= f.submit "更新",class: "new-btm" %>
		 <% end %>
 
       <%= link_to "戻る", product_path(@product), class:"back-btm" %>