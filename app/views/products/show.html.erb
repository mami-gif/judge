<h1>商品詳細ページ</h1>
<table>
  <tr>
    <th>status</th>	
    <th>variety</th>
    <th>商品名</th>
    <th>金額</th>
    <th>数量	</th>
    <th>掲載期間</th>
    <th>写真</th>
  </tr>
  <tr>
    <td><%= @product.status %></td>	
    <td><%= @product.variety %></td>
    <td><%= @product.name %></td>
    <td><%= @product.price %></td>
    <td><%= @product.limited_number %></td>
    <td><%= @product.first_time %></td>
    <td><%= @product.last_time %></td>
    <%= image_tag @product.photo.to_s %>
    <td><%= @product.comment %></td>
  </tr>
  <div><%= link_to "トップページ", products_path %></div>
  <!-- レビューページを作ったらリンクする -->
  <div><%= link_to "レビュー", products_path %></div>
  <% if @product.user_id == @current_user.id %>
  <div><%= link_to "編集", edit_product_path(@product) %></div>
  <div><%= link_to '削除', product_path(@product), method: :delete %></div>
  <% end %>
</table>
